{% extends "common/template.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block content %}
   
    
    <!-- Signup Section -->
<section class="ftco-section masthead">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-7 col-md-8 col-lg-4">
                <div id="login" class="login-wrap bg-secondary py-3 shadow d-block">
                    <a href="index.html" class="d-flex align-items-center justify-content-center p-4">
                        <img src="assets/images/lunette.png" width="100%" alt="">
                    </a>
                    <h3 class="text-center text-grey mb-0">Welcome</h3>
                    <p class="text-center" style="color: #fafafacc">Create an account by entering the information below
                    </p>
                    {{ form_start(registrationForm) }}
                    <div class="form-group">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user"></span>
                        </div>
                        {{ form_row(registrationForm.username, { 'attr':{'class' : 'form-control rounded'}}) }}
                    </div>
                    <div class="form-group">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-envelope"></span>
                        </div>
                        {{ form_row(registrationForm.email, { 'attr':{'class' : 'form-control rounded'}}) }}
                    </div>
                    <div class="form-group">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-lock"></span>
                        </div>
                        {{ form_row(registrationForm.plainPassword, { 'attr':{'class' : 'form-control rounded'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.avatar, { 'attr':{'class' : 'form-control rounded'}}) }}
                    </div>
                    <div class="d-flex justify-content-center m5">
                        {{ form_row(registrationForm.save) }} 
                    </div>
                    <div class="w-100 text-center mb-4 text">
                        <a href="{{ path('app_login') }}">Already an account?</a>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
