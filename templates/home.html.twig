{% extends "common/template.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="assets/css/home.css">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/home.js') }}" defer></script>
{% endblock %}

{% block content %}



<!-- Masthead-->
<header class="masthead bg-primary text-white text-center position-relative px-2" id="homeMasthead">


    <div class=" row justify-content-center align-items-center">
        <!-- Message flash -->
        {% for message in app.flashes('warning') %}
        <div class="alert alert-warning d">
            {{ message }}
        </div>
        {% endfor %}

        <!-- Masthead Avatar Image-->
        <img class="masthead-avatar col-5" src="assets/images/snowboarder.png" alt="..." />
        <div class="col-7">
            <!-- Masthead Heading-->
            <h1 class="masthead-heading text-uppercase text-secondary mb-0">Jump into the air</h1>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Masthead Subheading-->
            <p class="masthead-subheading font-weight-light text-secondary mb-0">Discover Snowboard Tricks</p>
        </div>
    </div>
    <!-- Arrow down-->
    <a href="#trick-list" class="btn-arrow btn-arrow-down position-absolute shadow-lg" id="arrow-down">
        <i class="icon-arrow fas fa-xl fa-arrow-down"></i>
    </a>
</header>
<!-- Trick Section-->
<section class="page-section portfolio d-flex flex-column p-5" id="trick-list">
    <!-- Arrow up-->
    <a href="" class="btn-arrow btn-arrow-up align-self-end mt-3 shadow-lg invisible" id="arrow-up">
        <i class="icon-arrow fas fa-xl fa-arrow-up"></i>
    </a>
    <div>
        <!-- Trick Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-primary mb-0" id="trick-list">
            Trick List
        </h2>

        <!--Add a Trick button-->
        <div class="text-center">
            <a href="addTrick.html" class="btn btn-home-grid load my-5" style="color: #fafafacc">
                <i class="fa fa-plus" style='color: #fafafacc'></i>
                Add a Trick
            </a>
        </div>
        <!-- Trick Grid Items-->
        <div class="container">
            <div class="row justify-content-center px-3">
                {% for i in 0..14 %}
                <div class=" col-xxl-2_4 col-xl-3 col-lg-4 col-md-6 mb-5">
                    <div class="card portfolio-item mx-auto">
                        <div class="position-relative">
                            <div
                                class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <a href="trick.html"
                                    class="portfolio-item-caption-content text-center text-secondary text-decoration-none">
                                    See More...
                                </a>
                            </div>
                            <img src='https://via.placeholder.com/300x200' class="card-img-top" alt="...">
                        </div>
                        <div class="card-body d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Name Trick</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                            </div>
                            <div class="d-flex">
                                <a href="editTrick.html" class="btn btn-home-grid mx-3 my-auto rounded">
                                    <i class="fa fa-pen" style='color: #fafafacc'></i>
                                </a>
                                <button href="#" class="modal-button btn btn-home-grid my-auto rounded"
                                    data-bs-toggle="modal" data-bs-target="#exampleModal" data-trick="1">
                                    <i class="fa fa-trash" style='color: #fafafacc'></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <button href="#" class="btn btn-home-grid load mx-3 my-auto" style="color: #fafafacc">
            <i class="fa fa-spinner" style='color: #fafafacc'></i>
            Load More tricks...
        </button>
    </div>
</section>

{% endblock %}