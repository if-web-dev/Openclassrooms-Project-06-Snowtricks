{% extends "common/template.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/trick.css') }}">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/trick.js') }}" defer></script>
{% endblock %}

{% block content %}
<!-- Masthead-->
<header class="masthead bg-primary text-white text-center d-flex flex-column px-2">
    <div class="container d-flex align-items-center flex-column">
        <!--Manager button
        <div class="align-self-end">
            <button href="#" class="btn btn-home-grid mx-3 my-auto rounded shadow-lg">
                <i class="fa fa-pen" style='color: #fafafacc'></i>
            </button>
            <button href="#" class="btn btn-home-grid my-auto rounded shadow-lg" data-bs-toggle="modal"
                data-bs-target="#exampleModal">
                <i class="fa fa-trash" style='color: #fafafacc'></i>
            </button>
        </div>-->
        <!-- Masthead Trick Title-->
        <h1 class="masthead-heading text-uppercase text-secondary mb-0">ADD A TRICK</h1>
        <!-- Masthead Subheading
        <p class="masthead-subheading font-weight-light text-secondary mb-0">Trick group</p>-->
    </div>
</header>
<!-- Trick Section-->
<section class="page-section portfolio d-flex flex-column align-items-center p-5" id="add-trick">
    <form action="..." method="post" enctype="multipart/form-data">
        <!--Trick description-->
        <h2 class="page-section-heading text-center text-uppercase text-primary mb-5 pt-4" id="trick-list">
            Add Description
        </h2>
        <div class="form-group">
            <div class="input-group input-group-lg mb-4">
                <input type="text" name="name" class="form-control text-white rounded" placeholder="Trick Name"
                    required>
            </div>
        </div>
        <div class="form-group input-group input-group-lg mb-4">
            <select class="form-control rounded" name="trickGroup" id="trickGroup">
                <option value="" selected disabled>--- Select a trick group ---</option>
                <option value="1">Group 1</option>
                <option value="2">Group 2</option>
                <option value="3">Group 3</option>
                <option value="4">Group 4</option>
            </select>
        </div>
        <div class="form-group">
            <div class="input-group input-group-lg mb-4">
                <textarea name="description" id="description" class="form-control text-white rounded" rows='5' cols="50"
                    placeholder="Post a Trick description" required></textarea>
            </div>
        </div>
        <!--Trick Media-->
        <h2 class="page-section-heading text-center text-uppercase text-primary mb-5 pt-4" id="trick-list">
            Add Media
        </h2>
        <div class="input-group input-group-lg mb-4 ">
            <input type="url" class="form-control rounded" name="url" id="url" placeholder="Add a youtube trick url"
                pattern="https://.*" required>
        </div>
        <div class="input-group input-group-lg position-relative" id="upload-input">
            <button class="btn btn-outline-secondary px-4" type="button" id="button-addon1">Upload Image</button>
        </div>
        <div class="input-group input-group-lg mb-4">
            <input class="form-control rounded pl-0" type="file" id="formFileMultiple" multiple>
        </div>
        <div class="d-flex justify-content-center">
            <input type="submit" name="submit" id="submit"
                class="btn btn-home-grid mx-3 my-4 my-xl-auto  rounded shadow-lg" value="Save this Trick">
            </input>
        </div>
    </form>
</section>

{% endblock %}