{% extends "common/template.html.twig" %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block content %}
<!-- Signup Section -->
<section class="ftco-section masthead">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div id="login" class="login-wrap bg-secondary py-3 shadow d-block">
                    <a href="index.html" class="d-flex align-items-center justify-content-center p-4">
                        <img src="assets/img/lunette.png" width="100%" alt="">
                    </a>
                    <h3 class="text-center mb-0" style="color: #fafafacc">Welcome</h3>
                    <p class="text-center" style="color: #fafafacc">Create an account by entering the information below
                    </p>
                    <form action="#" class="login-form">
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span
                                    class="fa fa-user"></span></div>
                            <input type="text" name="username" id="username" class="form-control text-white rounded"
                                placeholder="Username" required>
                        </div>
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span
                                    class="fa fa-envelope"></span></div>
                            <input type="email" name="email" id="email" class="form-control text-white rounded"
                                placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span
                                    class="fa fa-lock"></span></div>
                            <input type="password" name="password" id="password" class="form-control text-white rounded"
                                placeholder="Password" required>
                        </div>
                        <div class="d-flex justify-content-center pb-3">
                            <button type="submit" name="submit" class="btn btn-login load mx-3 shadow-lg my-auto">Get
                                Started</button>
                        </div>
                        <div class="w-100 text-center mb-4 text">
                            <a href="login.html">Already an account?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}